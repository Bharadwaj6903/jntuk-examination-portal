<% layout("/layouts/boilerplate") -%>

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card exam-card text-center p-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=exam.typeOfExam %> -
                                <%=exam.course%>
                        </h5>
                        <p class="card-text">
                            Notification for
                            <%=exam.regulation%> regulation,
                                <%=exam.semester%> semester is out!!!
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-3">
                    <a href="/exams/<%=exam._id%>/edit" class="btn btn-dark">Edit</a>
                    <form method="POST" action="/exams/<%=exam._id%>?_method=DELETE">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>