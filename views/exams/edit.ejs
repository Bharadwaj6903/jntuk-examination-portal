<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 col-sm-12">
                    <h3 class="text-center">Edit your Exam</h3>
                    <form method="POST" action="/exams/<%=exam._id%>?_method=PUT" novalidate class="needs-validation">
                        <div class="mb-3">
                            <label for="course" class="form-label">Course</label>
                            <select name="exam[course]" id="course" class="form-select" required>
                                <option value="" disabled selected>Select a course</option>
                                <option value="BTech">BTech</option>
                                <option value="MTech">MTech</option>
                                <option value="MCA">MCA</option>
                            </select>
                            <div class="valid-feedback">Course looks good</div>
                            <div class="invalid-feedback">Please select a valid course.</div>
                        </div>
                        <div class="mb-3">
                            <label for="regulation" class="form-label">Regulation</label>
                            <input name="exam[regulation]" value="<%=exam.regulation%>" type="text" class="form-control" required/>
                            <div class="invalid-feedback">Please enter correct regulation</div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="semester" class="form-label">Semester</label>
                                <select name="exam[semester]" id="semester" class="form-select" required>
                                    <option value="" disabled selected>Select a semester</option>
                                    <option value="1-1">1-1</option>
                                    <option value="1-2">1-2</option>
                                    <option value="2-1">2-1</option>
                                    <option value="2-2">2-2</option>
                                    <option value="3-1">3-1</option>
                                    <option value="3-2">3-2</option>
                                    <option value="4-1">4-1</option>
                                    <option value="4-2">4-2</option>
                                </select>
                                <div class="valid-feedback">Semester looks good</div>
                                <div class="invalid-feedback">Please select a valid semester.</div>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label for="typeOfExam" class="form-label">Type of Exam</label>
                                <select name="exam[typeOfExam]" id="typeOfExam" class="form-select" required>
                                    <option value="" disabled selected>Select type of exam</option>
                                    <option value="Regular">Regular</option>
                                    <option value="Supply">Supply</option>
                                </select>
                                <div class="valid-feedback">Type of Exam looks good</div>
                                <div class="invalid-feedback">Type of Exam must be Regular or Supply</div>
                            </div>

                        </div>




                        <div class="text-center">
                            <button class="btn btn-success edit-btn mt-3">Update Exam</button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </body>