<% layout("/layouts/boilerplate") -%>

    <h2 class="text-center mt-4">Registered Students for Revaluation</h2>

    <div class="d-flex justify-content-end mt-3">
        <a href="/exams/<%= exam._id %>/revaluation_registrations/subjects" class="btn btn-success px-4">
            View Revaluation  Registrations
        </a>
    </div>

    <form action="/exams/<%= exam._id %>/revaluation_registrations" method="POST">
        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Roll Number</th>
                        <th>Branch</th>

                        <th>Image</th>
                        <th>Attachments</th>
                        <th>Signature</th>
                        <th>Revaluation Subjects</th>
                        <th class="text-center">Approve/Disapprove</th>
                    </tr>
                </thead>
                <tbody id="studentTableBody">
                    <% students.forEach(student => { %>
                        <% let examReg = student.examRegistrations.find(reg => reg.examId.toString() === exam._id.toString()); %>
                            <% if(examReg.status_of_revaluation_application === "pending") { %>
                                <tr>
                                    <td>
                                        <%= student.name %>
                                    </td>
                                    <td>
                                        <%= student.rollNumber %>
                                    </td>
                                    <td>
                                        <%= student.branch %>
                                    </td>

                                    <td class="text-center">
                                        <img src="<%= student.image %>" alt="Student Image" class="student-img">
                                    </td>
                                    <td class="text-center">
                                        <% if (examReg && examReg.revaluation_challan_pdf) { %>
                                            <a href="<%= examReg.revaluation_challan_pdf %>" target="_blank" class="btn btn-sm btn-info">View Challan</a>
                                            <% } else { %>
                                                <span class="text-muted">Not Available</span>
                                                <% } %>
                                    </td>
                                    <td class="text-center">
                                        <% if (examReg && examReg.revaluation_signature) { %>
                                            <a href="<%= examReg.revaluation_signature %>" target="_blank" class="btn btn-sm btn-info">View Signature</a>
                                            <% } else { %>
                                                <span class="text-muted">Not Available</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (examReg && examReg.reEvaluationSubjects && examReg.reEvaluationSubjects.length > 0) { %>
                                            <table class="table table-sm table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Subject Name</th>
                                                        <th>Subject Code</th>
                                                        <th>Internal Marks</th>
                                                        <th>External Marks/Grade</th>
                                                        <th>Total Marks</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% examReg.reEvaluationSubjects.forEach(subject => { %>
                                                        <tr>
                                                            <td>
                                                                <%= subject.name %>
                                                            </td>
                                                            <td>
                                                                <%= subject.code %>
                                                            </td>
                                                            <td>
                                                                <%= subject.internal %>
                                                            </td>
                                                            <td>
                                                                <%= subject.external %>
                                                            </td>
                                                            <td>
                                                                <%= subject.total %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                            <% } else { %>
                                                <span class="text-muted">No subjects applied</span>
                                                <% } %>
                                    </td>
                                    <td class="text-center">
                                        <input type="hidden" name="studentIds[]" value="<%= student._id %>">
                                        <div class="d-flex flex-column align-items-center">
                                            <input type="radio" class="btn-check" name="status_<%= student._id %>" id="accept_<%= student._id %>" value="accepted" required>
                                            <label class="btn btn-outline-success w-100 mb-2" for="accept_<%= student._id %>">Accept</label>

                                            <input type="radio" class="btn-check" name="status_<%= student._id %>" id="reject_<%= student._id %>" value="rejected" required>
                                            <label class="btn btn-outline-danger w-100" for="reject_<%= student._id %>">Reject</label>
                                        </div>
                                    </td>

                                </tr>
                                <% } %>
                                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary px-4">Submit</button>
        </div>
    </form>

    <!-- Pagination Controls -->
    <div class="text-center mt-3">
        <button id="prevPage" class="btn btn-secondary mx-2">Previous</button>
        <span id="pageInfo"></span>
        <button id="nextPage" class="btn btn-secondary mx-2">Next</button>
    </div>

    <!-- CSS for Styling -->
    <style>
        .table-responsive {
            overflow-x: auto;
        }
        
        .student-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
        }
        /* Responsive Adjustments */
        
        @media (max-width: 992px) {
            table {
                font-size: 14px;
            }
            .btn-group label {
                width: 45%;
            }
        }
        
        @media (max-width: 768px) {
            table {
                font-size: 12px;
            }
            .student-img {
                width: 70px;
                height: 70px;
            }
            .btn-group {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
            .btn-group label {
                width: 100%;
                margin-bottom: 5px;
            }
        }
        
        @media (max-width: 576px) {
            table {
                font-size: 11px;
            }
            .student-img {
                width: 60px;
                height: 60px;
            }
        }
    </style>

    <!-- JavaScript for Pagination -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const rowsPerPage = 20; // Number of students per page
            let currentPage = 1;

            const students = document.querySelectorAll("#studentTableBody tr");
            const totalPages = Math.ceil(students.length / rowsPerPage);

            function showPage(page) {
                students.forEach((row, index) => {
                    row.style.display = (index >= (page - 1) * rowsPerPage && index < page * rowsPerPage) ? "" : "none";
                });

                document.getElementById("pageInfo").textContent = `Page ${page} of ${totalPages}`;
                document.getElementById("prevPage").disabled = (page === 1);
                document.getElementById("nextPage").disabled = (page === totalPages);
            }

            document.getElementById("prevPage").addEventListener("click", function() {
                if (currentPage > 1) {
                    currentPage--;
                    showPage(currentPage);
                }
            });

            document.getElementById("nextPage").addEventListener("click", function() {
                if (currentPage < totalPages) {
                    currentPage++;
                    showPage(currentPage);
                }
            });

            showPage(currentPage); // Show the first page on load
        });
    </script>