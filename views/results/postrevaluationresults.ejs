<% layout("/layouts/boilerplate") -%>

    <div class="container mt-5">
        <h1 class="mb-4 text-center text-wrap text-break">
            Post Re-Evaluation Results for
            <%= exam.course %> -
                <%= exam.semester %> (
                    <%= exam.typeOfExam %>)
        </h1>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <form action="/exams/<%= exam._id %>/postrevaluationresults" method="POST" enctype="multipart/form-data" class="p-4 shadow-lg rounded-3 bg-light">

                    <div class="mb-3">
                        <label for="file" class="form-label fw-bold">Upload Re-Evaluation Results:</label>
                        <input name="exam[revaluationResults]" type="file" class="form-control" required />
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-success btn-lg mt-3 ">Declare Results</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>